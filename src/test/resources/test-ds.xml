      pool-name="markFull" enabled="true"
      use-java-context="true">
      <connection-url>jdbc:postgresql://localhost:5432/markfullone</connection-url>
      <driver>org.postgresql.Driver</driver>
      <security>
         <user-name>postgres</user-name>
         <password>marcos</password>
      </security>
   </datasource>
</datasources>
 
